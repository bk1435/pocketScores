<resources>
    <style name="Theme.PocketScores" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize colors for the navigation bar -->
        <item name="colorPrimary">#000000</item> <!-- Navigation bar background -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Navigation bar text and icon color -->
        <item name="bottomNavigationStyle">@style/BottomNavigationTheme</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
</resources>
