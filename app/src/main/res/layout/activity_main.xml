<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView to handle large amounts of text -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TextView to display the formatted API data -->
        <TextView
            android:id="@+id/nflDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading NFL scores..."
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </ScrollView>

    <!-- activity_main.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- TextView to show when no data is available -->
        <TextView
            android:id="@+id/noDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No data available"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- RecyclerView to display list of games -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
